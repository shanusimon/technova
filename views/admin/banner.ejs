<%- include("../../views/partials/admin/header") %>
<div class="content-header row">
    <div class="d-flex justify-content-between align-items-center">
        <h2 class="content-title card-title">Banners</h2>
    </div>
</div>
<div class="right mt-5">
    <table class="table table-striped">
        <thead>
            <tr>
                <th scope="col">Image</th>
                <th scope="col">Title</th>
                <th scope="col">Description</th>
                <th scope="col">Active</th>
                <th scope="col">Delete</th>
            </tr>
        </thead>
        <tbody>
            <% if (locals.data && locals.data.length) { %>
                <% for (let i = 0; i < locals.data.length; i++) { %>
                    <tr>
                        <td>
                            <img src="/uploads/re-image/<%= locals.data[i].image %>" style="height: 2rem; width: 3rem;" class="img-xs" alt="Item">
                        </td>
                        <td>
                            <%= locals.data[i].title %>
                        </td>
                        <td>
                            <%= locals.data[i].description %>
                        </td>
                        <td>
                            <% if (locals.data[i].startDate < Date.now() && locals.data[i].endDate > Date.now()) { %>
                                <p class="badge rounded-pill alert-success">Active</p>
                            <% } else { %>
                                <p class="badge rounded-pill alert-danger">Not Active</p>
                            <% } %>
                        </td>
                        <td class="action" data-title="Remove">
                            <a href="/admin/deleteBanner?id=<%= locals.data[i]._id %>"><i class="icon material-icons md-delete"></i></a>
                        </td>
                    </tr>
                <% } %>
            <% } else { %>
                <tr>
                    <td colspan="5" class="text-center">No Banner Found</td>
                </tr>
            <% } %>
        </tbody>
    </table>
</div>
<div class="container mt-3">
    <div class="row justify-content-center">
        <div class="col-md-6 text-center">
            <a href="/admin/add-banner" style="position: relative; z-index: 10;">
                <button class="btn btn-primary mt-3" type="button" style="position: relative; z-index: 10;">Add Banner</button>
            </a>            
        </div>
    </div>
</div>
<%- include("../../views/partials/admin/footer") %>
