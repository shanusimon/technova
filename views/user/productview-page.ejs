<%- include('../partials/user/header') %> 
<style>
header {
    position: relative;
    z-index: 1000;
}

.detail-gallery .product-image-slider {
    position: relative;
    z-index: 10; 
    overflow: hidden;
}

.modal-body {
    padding-top: 100px;
}
</style>

<!-- Modal for Large Image -->
<div class="modal fade" id="imageModal" tabindex="-1" role="dialog" aria-labelledby="imageModalLabel" aria-hidden="true">
  <div class="modal-dialog modal-lg" role="document">
    <div class="modal-content">
      <div class="modal-body">
        <img src="" class="img-fluid" id="modalImage" alt="Large product image">
      </div>
    </div>
  </div>
</div>

<div class="container">
    <nav aria-label="breadcrumb" class="mt-3">
        <ol class="breadcrumb">
          <li class="breadcrumb-item"><a href="/">Home</a></li>
          <li class="breadcrumb-item"><a href="/category/<%= product.category %>"><%= category.name %></a></li>
          <li class="breadcrumb-item active" aria-current="page"><%= product.productName %></li>
        </ol>
      </nav>
</div>
  
<div class="container">
    <div class="modal-body">
        <div class="row justify-content-center align-items-center" style="min-height: 100vh;">
            <div class="col-md-6 col-sm-12 col-xs-12">
                <div class="detail-gallery">
                    <span class="zoom-icon"><i class="fi-rs-search"></i></span>
                    <!-- MAIN SLIDES -->
                    <div class="product-image-slider">
                        <% for(let i = 0; i < product.productImage.length; i++) { %>
                            <figure class="border-radius-10">
                                <img src="/uploads/re-image/<%= product.productImage[i] %>" alt="<%=product.productName%>" class="product-img" data-bs-toggle="modal" data-bs-target="#imageModal" data-img="/uploads/re-image/<%= product.productImage[i] %>">
                            </figure>
                        <% } %>
                    </div>
                    <!-- THUMBNAILS -->
                    <div class="slider-nav-thumbnails pl-15 pr-15">
                        <% for(let i = 0; i < product.productImage.length; i++) { %>
                            <div><img src="/uploads/re-image/<%= product.productImage[i] %>" alt="product image"></div>
                        <% } %>
                    </div>
                </div>
                <!-- End Gallery -->
                <div class="social-icons single-share">
                    <ul class="text-grey-5 d-inline-block">
                        <li><strong class="mr-10">Share this:</strong></li>
                        <li class="social-facebook"><a href="#"><img src="evara-frontend/assets/imgs/theme/icons/icon-facebook.svg" alt=""></a></li>
                    </ul>
                </div>
            </div>

            <div class="col-md-6 col-sm-12 col-xs-12">
                <div class="detail-info">
                    <h3 class="title-detail mt-30 text-center"><%= product.productName %></h3>
                    <div class="product-detail-rating text-center">
                        <div class="pro-details-brand">
                            <span> Brand: <a href="shop-grid-right.html"><%=product.brand%></a></span>
                        </div>
                        <div class="product-rate-cover text-end">
                            <div class="product-rate d-inline-block">
                                <div class="product-rating" style="width:90%"></div>
                            </div>
                            <span class="font-small ml-5 text-muted"> (25 reviews)</span>
                        </div>
                    </div>
                    <div class="clearfix product-price-cover text-center">
                        <div class="product-price primary-color">
                            <ins><span class="text-brand"><%=product.salePrice%></span></ins>
                            <ins><span class="old-price font-md ml-15"><%=product.regularPrice%></span></ins>
                            <span class="save-price font-md color3 ml-15"><%=product.productOffer%>%</span>
                        </div>
                    </div>
                    <div class="bt-1 border-color-1 mt-15 mb-15"></div>
                    <div class="short-desc mb-30 text-center">
                        <p class="font-sm"><%=product.description%></p>
                    </div>

                    <div class="attr-detail attr-color mb-15 text-center">
                        <strong class="mr-10">Color: <%=product.color%></strong>
                    </div>
                    <% if(product.quantity > 0) { %>
                        <div class="bt-1 border-color-1 mt-30 mb-30"></div>
                        <div class="detail-extralink text-center">
                            <div class="detail-qty border radius d-inline-block">
                                <a href="#" class="qty-down"><i class="fi-rs-angle-small-down"></i></a>
                                <span class="qty-val">1</span>
                                <a href="#" class="qty-up"><i class="fi-rs-angle-small-up"></i></a>
                            </div>
                            <div class="product-extra-link2 d-inline-block">
                                <button type="button" class="button button-add-to-cart">Add to cart</button>
                                <a aria-label="Add To Wishlist" class="action-btn hover-up" href="#"><i class="fi-rs-heart"></i></a>
                            </div>
                        </div>
                    <% } else { %>
                        <div class="bt-1 border-color-1 mt-30 mb-30"></div>
                        <div class="detail-extralink text-center">
                            <p class="text-danger font-weight-bold">Sold Out</p>
                            <div class="product-extra-link2 d-inline-block">
                                <button type="button" class="button button-add-to-cart" disabled style="background-color: #d3d3d3; cursor: not-allowed;">Sold Out</button>
                                <a aria-label="Add To Wishlist" class="action-btn hover-up" href="#"><i class="fi-rs-heart"></i></a>
                            </div>
                        </div>
                    <% } %>
                    
                    <% if(product.quantity > 0) { %>
                        <ul class="product-meta font-xs color-grey mt-50 text-center"><br>
                            <li>Availability:<span class="in-stock text-success ml-5"><%=product.quantity%> Items In Stock</span></li>
                        </ul>
                    <% } else { %>
                        <ul class="product-meta font-xs color-grey mt-50 text-center"><br>
                            <li>Availability:<span class="in-stock text-danger ml-5">Out of Stock</span></li>
                        </ul>
                    <% } %>
                </div>
                <!-- Detail Info -->
            </div>
        </div>
    </div>
</div>

<%- include('../partials/user/footer') %> 


